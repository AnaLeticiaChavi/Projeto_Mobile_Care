<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.RemoverEstoque"
    android:background="#006F9D">

    <ScrollView android:id="@+id/ScrlViewRemoverEstoque" android:layout_width="fill_parent" android:layout_height="fill_parent" >

        <LinearLayout android:id="@+id/layoutForScrollRemoverEstoque" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/txtNomeMedExcluirEstoque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="Nome do medicamento"
                android:layout_toLeftOf="@+id/btnExclusaoEstoque"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#FFFFFF">

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnExclusaoEstoque"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:background="#8DCACB"
                android:layout_alignTop="@+id/txtNomeMedExcluirEstoque"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/txtDataCompraExcluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Data da Compra"
                android:layout_alignStart="@+id/txtNomeMedExcluirEstoque"
                android:layout_below="@+id/txtMedExcluirEst"
                android:textColor="#FFFFFF"
                android:layout_alignRight="@+id/txtMedExcluirEst"
                android:layout_alignEnd="@+id/txtMedExcluirEst"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/txtQtdExcluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Quantidade na cartela"
                android:layout_below="@+id/btnExclusaoEstoque"
                android:layout_alignLeft="@+id/txtNomeMedExcluirEstoque"
                android:layout_alignStart="@+id/txtNomeMedExcluirEstoque"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/txtDataValExcluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Data de Validade"
                android:layout_below="@+id/txtDataCompraExcluir"
                android:layout_alignLeft="@+id/txtDataCompraExcluir"
                android:layout_alignStart="@+id/txtDataCompraExcluir"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/txtMedExcluirEst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome do Medicamento"
                android:layout_below="@+id/txtQtdExcluir"
                android:layout_alignLeft="@+id/txtQtdExcluir"
                android:layout_alignStart="@+id/txtQtdExcluir"
                android:textColor="#FFFFFF"
                android:layout_alignRight="@+id/txtQtdExcluir"
                android:layout_alignEnd="@+id/txtQtdExcluir"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/btnExcluiEstBD"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remover"
                android:layout_marginTop="73dp"
                android:layout_below="@+id/txtDataValExcluir"
                android:layout_centerHorizontal="true"
                android:background="#8DCACB"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
