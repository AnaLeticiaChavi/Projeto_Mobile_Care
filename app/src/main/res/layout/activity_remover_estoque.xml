<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.RemoverEstoque">

    <TextView
        android:id="@+id/txtRemoverMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="111dp"
        android:layout_marginTop="26dp"
        android:text="Remover Medicamento do estoque" />

    <EditText
        android:id="@+id/txtNomeMedExcluirEstoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtRemoverMedicamento"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Nome do medicamento" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnExclusaoEstoque"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtNomeMedExcluirEstoque"
        android:layout_alignBottom="@+id/txtNomeMedExcluirEstoque"
        android:layout_toRightOf="@+id/txtRemoverMedicamento"
        android:text="OK" />

    <EditText
        android:id="@+id/txtDataCompraExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Data da Compra"
        android:layout_alignStart="@+id/txtNomeMedExcluirEstoque"
        android:layout_below="@+id/txtMedExcluirEst"
        android:layout_toLeftOf="@+id/btnExclusaoEstoque" />

    <EditText
        android:id="@+id/txtQtdExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quantidade na cartela"
        android:layout_below="@+id/btnExclusaoEstoque"
        android:layout_alignLeft="@+id/txtNomeMedExcluirEstoque"
        android:layout_alignStart="@+id/txtNomeMedExcluirEstoque" />

    <EditText
        android:id="@+id/txtDataValExcluir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Data de Validade"
        android:layout_below="@+id/txtDataCompraExcluir"
        android:layout_alignLeft="@+id/txtDataCompraExcluir"
        android:layout_alignStart="@+id/txtDataCompraExcluir" />

    <EditText
        android:id="@+id/txtMedExcluirEst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nome do Medicamento"
        android:layout_below="@+id/txtQtdExcluir"
        android:layout_alignLeft="@+id/txtQtdExcluir"
        android:layout_alignStart="@+id/txtQtdExcluir" />

    <Button
        android:id="@+id/btnExcluiEstBD"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remover"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/txtDataValExcluir"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
