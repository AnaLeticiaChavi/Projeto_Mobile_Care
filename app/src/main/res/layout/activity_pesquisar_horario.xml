<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.PesquisarHorario">

    <TextView
        android:id="@+id/textPesquisarHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisa de HorÃ¡rio"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtPesquisaNomeMedHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Nome do Medicamento"
        android:layout_below="@+id/textPesquisarHorario"
        android:layout_alignRight="@+id/textPesquisarHorario"
        android:layout_alignEnd="@+id/textPesquisarHorario">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnPesqHorBD"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesquisar"
        android:layout_alignBottom="@+id/txtPesquisaNomeMedHorario"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/txtSaidaPesqHor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_below="@+id/btnPesqHorBD"
        android:layout_alignRight="@+id/btnPesqHorBD"
        android:layout_alignEnd="@+id/btnPesqHorBD"
        android:layout_alignLeft="@+id/txtPesquisaNomeMedHorario"
        android:layout_alignStart="@+id/txtPesquisaNomeMedHorario" />

</RelativeLayout>
