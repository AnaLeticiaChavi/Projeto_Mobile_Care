<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.CadastroMedicamento">

    <TextView
        android:id="@+id/txtCadastroDeMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Cadastro de Novo Medicamento" />

    <EditText
        android:id="@+id/txtNomeMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCadastroDeMedicamento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nome do Medicamento" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtDosagemMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtNomeMedicamento"
        android:layout_below="@+id/txtNomeMedicamento"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Dosagem" />

    <EditText
        android:id="@+id/txtDataIni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDosagemMedicamento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Data de Início de Uso" />

    <EditText
        android:id="@+id/txtDataFim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataIni"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Data de Término de Uso" />

    <EditText
        android:id="@+id/txtTarja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtDataFim"
        android:layout_below="@+id/txtDataFim"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Tarja de Medicamento" />

    <EditText
        android:id="@+id/txtObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTarja"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Observações"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnCadMedBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Cadastrar" />

</RelativeLayout>
