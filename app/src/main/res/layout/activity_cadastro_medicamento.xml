<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.CadastroMedicamento">

    <TextView
        android:id="@+id/txtCadastroDeMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Cadastro de Novo Medicamento" />

    <EditText
        android:id="@+id/txtNomeMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCadastroDeMedicamento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nome do Medicamento" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/txtTarja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tarja de Medicamento"
        android:layout_alignLeft="@+id/txtNomeMedicamento"
        android:layout_below="@+id/txtDataFim" />

    <Button
        android:id="@+id/btnCadMedBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_below="@+id/txtObs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtDosagemMedicamento"
        android:layout_below="@+id/txtNomeMedicamento"
        android:layout_alignLeft="@+id/txtCadastroDeMedicamento"
        android:layout_alignStart="@+id/txtCadastroDeMedicamento"
        android:hint="Dosagem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDataIni"
        android:layout_below="@+id/txtDosagemMedicamento"
        android:layout_alignLeft="@+id/txtDosagemMedicamento"
        android:layout_alignStart="@+id/txtDosagemMedicamento"
        android:hint="Data de Inicio" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDataFim"
        android:layout_below="@+id/txtDataIni"
        android:layout_centerHorizontal="true"
        android:hint="Data de fim" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtObs"
        android:layout_below="@+id/txtTarja"
        android:layout_alignLeft="@+id/txtDataIni"
        android:layout_alignStart="@+id/txtDataIni"
        android:hint="Obs"
        android:layout_alignRight="@+id/txtCadastroDeMedicamento"
        android:layout_alignEnd="@+id/txtCadastroDeMedicamento" />

</RelativeLayout>
