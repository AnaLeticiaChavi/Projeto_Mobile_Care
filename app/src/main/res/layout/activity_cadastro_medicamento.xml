<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.CadastroMedicamento"
    android:background="#006F9D">
    <ScrollView android:id="@+id/ScrlViewCadastrarMedicamento" android:layout_width="fill_parent" android:layout_height="fill_parent" >

        <LinearLayout android:id="@+id/layoutForScrollCadastrarMedicamento" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
            <EditText
                android:id="@+id/txtNomeMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Nome do Medicamento"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtTarja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Tarja de Medicamento"
                android:layout_alignLeft="@+id/txtNomeMedicamento"
                android:layout_below="@+id/txtDataFim"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtDosagemMedicamento"
                android:layout_below="@+id/txtNomeMedicamento"
                android:hint="Dosagem"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtDataIni"
                android:layout_below="@+id/txtDosagemMedicamento"
                android:layout_alignLeft="@+id/txtDosagemMedicamento"
                android:layout_alignStart="@+id/txtDosagemMedicamento"
                android:hint="Data de Inicio"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtDataFim"
                android:layout_below="@+id/txtDataIni"
                android:layout_centerHorizontal="true"
                android:hint="Data de fim"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtObs"
                android:layout_below="@+id/txtTarja"
                android:layout_alignLeft="@+id/txtDataIni"
                android:layout_alignStart="@+id/txtDataIni"
                android:hint="Obs"
                android:layout_centerHorizontal="true"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <Button
                android:id="@+id/btnCadMedBD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cadastrar"
                android:textSize="20dp"
                android:background="#8DCACB"
                android:layout_alignBottom="@+id/ScrlView"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="86dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
        </ScrollView>




</RelativeLayout>
