<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.CadastrarEstoque">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar Medicamento no estoque"
        android:id="@+id/txtCadastrarEstoque"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDataCompraCadEstoque"
        android:layout_below="@+id/txtCadastrarEstoque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:hint="Data da Compra" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/txtQtdCadestoque"
        android:layout_below="@+id/txtDataCompraCadEstoque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Quantidade na cartela" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txtDataValidadeCadEstoque"
        android:layout_below="@+id/txtQtdCadestoque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Data de Validade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataValidadeCadEstoque"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Nome do Medicamento"
        android:id="@+id/txtNomeMedCadEstoque" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btnCadEstoque"
        android:layout_below="@+id/txtNomeMedCadEstoque"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />
</RelativeLayout>
