<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.AtualizarMedicamento"
    android:background="#006F9D">

        <EditText
        android:id="@+id/txtNomeAtualizaMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Nome do medicamento"
        android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnAtualizacaoMedicamento"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignTop="@+id/txtNomeAtualizaMedicamento"
        android:layout_toRightOf="@+id/txtNomeAtualizaMedicamento"
        android:background="#8DCACB" />

    <EditText
        android:id="@+id/txtNomeAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAtualizacaoMedicamento"
        android:layout_toLeftOf="@+id/btnAtualizacaoMedicamento"
        android:ems="10"
        android:hint="Nome"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/txtDosagemAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Dosagem"
        android:layout_below="@+id/txtNomeAtualiza"
        android:layout_alignLeft="@+id/txtNomeAtualiza"
        android:layout_alignStart="@+id/txtNomeAtualiza"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/txtDataIniAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDosagemAtualiza"
        android:layout_toLeftOf="@+id/btnAtualizacaoMedicamento"
        android:ems="10"
        android:hint="Data de inicio"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/txtDataFimAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Data de fim"
        android:layout_below="@+id/txtDataIniAtualiza"
        android:layout_alignLeft="@+id/txtDataIniAtualiza"
        android:layout_alignStart="@+id/txtDataIniAtualiza"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/txtTarjaAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDataFimAtualiza"
        android:layout_toLeftOf="@+id/btnAtualizacaoMedicamento"
        android:ems="10"
        android:hint="Tarja"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/txtObsAtualiza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTarjaAtualiza"
        android:layout_toLeftOf="@+id/btnAtualizacaoMedicamento"
        android:ems="10"
        android:hint="Obs"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnAtualizaMedBD"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtObsAtualiza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Atualizar"
        android:background="#8DCACB"
        android:textSize="20dp" />

</RelativeLayout>
