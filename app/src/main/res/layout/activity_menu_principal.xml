<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mobilecare.app.MenuPrincipal">

    <TextView
        android:id="@+id/txtMenuPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Menu Principal" />

    <Button
        android:id="@+id/btnMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMenuPrincipal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Manter Medicamentos" />

    <Button
        android:id="@+id/btnHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manter Horários"
        android:layout_below="@+id/btnMedicamento"
        android:layout_alignLeft="@+id/btnMedicamento"
        android:layout_alignStart="@+id/btnMedicamento"
        android:layout_alignRight="@+id/btnMedicamento"
        android:layout_alignEnd="@+id/btnMedicamento" />

    <Button
        android:id="@+id/btnEstoque"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manter Estoque"
        android:layout_alignStart="@+id/btnHorario"
        android:layout_below="@+id/btnHorario"
        android:layout_alignLeft="@+id/btnMedicamento"
        android:layout_alignRight="@+id/btnMedicamento"
        android:layout_alignEnd="@+id/btnMedicamento" />

    <Button
        android:id="@+id/btnRelatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar Relatórios"
        android:layout_alignStart="@+id/btnEstoque"
        android:layout_below="@+id/btnEstoque"
        android:layout_alignLeft="@+id/btnMedicamento"
        android:layout_alignRight="@+id/btnMedicamento"
        android:layout_alignEnd="@+id/btnMedicamento" />

</RelativeLayout>
